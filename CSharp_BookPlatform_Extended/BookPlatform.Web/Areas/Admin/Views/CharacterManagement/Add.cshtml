@using BookPlatform.Core.ViewModels.Character
@model AddCharacterInputModel

<div class="container">
    <div class="row">
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="card mb-2 shadow-sm" style="width: 100%">
                <img src="@Model.ImageUrl" class="card-img-top" alt="Cover Image" style="height: 450px; object-fit: cover;">
            </div>
            <div class="d-flex flex-column">
                <a class="btn btn-dark" asp-area="Admin" asp-controller="CharacterManagement" asp-action="Index" asp-route-bookId="@Model.BookId">Go back</a>
            </div>
        </div>
        <div class="col-md-9 col-sm-6 col-xs-12 min-vw-50">
            <h3>@Model.BookTitle</h3>
            <form asp-action="Add" method="post" asp-antiforgery="true">
                <input type="hidden" name="bookId" value="@Model.BookId" />
                <input type="hidden" name="bookTitle" value="@Model.BookTitle" />
                <input type="hidden" name="imageUrl" value="@Model.ImageUrl" />
                <input type="hidden" name="readingStatusId" value="@Model.ReadingStatusId" />
                <div>
                    <label for="Name">Name</label>                    
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Save</button>                
            </form>            
        </div>
    </div>
</div>