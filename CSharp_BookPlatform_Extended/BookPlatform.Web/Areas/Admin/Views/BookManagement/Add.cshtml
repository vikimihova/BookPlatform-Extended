@using BookPlatform.Core.ViewModels.Book
@model AddBookInputModel

<div class="container">
    <div class="row">
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="card mb-2 shadow-sm" style="width: 100%">
                <img src="~/images/no-image.jpeg" class="card-img-top" alt="Cover Image" style="height: 450px; object-fit: cover;">
            </div>
            <div class="d-flex flex-column">
                <a class="btn btn-dark" asp-area="Admin" asp-controller="BookManagement" asp-action="Index">Go back</a>
            </div>
        </div>
        <div class="col-md-9 col-sm-6 col-xs-12 min-vw-50">
            <form asp-action="Add" method="post" asp-antiforgery="true">
                <div>
                    <label for="Title">Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.AuthorId" class="form-label-add-edit">Select Author</label>
                    <div class="d-flex">
                        <select asp-for="@Model.AuthorId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Authors, "Id", "FullName"))">
                            <option value="">Select Author...</option>
                        </select>
                        <span asp-validation-for="@Model.AuthorId" class="text-danger"></span>
                    </div>
                </div>
                <div>
                    <label for="PublicationYear">Publication Year</label>
                    <input asp-for="PublicationYear" class="form-control" />
                    <span asp-validation-for="PublicationYear" class="text-danger"></span>
                </div>
                <div>
                    <label for="Description">Description</label>
                    <textarea asp-for="@Model.Description" class="form-control" style="height: 200px;"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>                
                <div>
                    <label asp-for="@Model.GenreId" class="form-label-add-edit">Select Genre</label>
                    <div class="d-flex">
                        <select asp-for="@Model.GenreId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Genres, "Id", "Name"))">
                            <option value="">Select Genre...</option>
                        </select>
                        <span asp-validation-for="@Model.GenreId" class="text-danger"></span>
                    </div>
                </div>
                <div>
                    <label for="ImageUrl">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Save</button>
            </form>
        </div>
    </div>
</div>